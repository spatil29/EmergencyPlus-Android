<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Greyish"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.finalproject.MainActivity" >

    <EditText
        android:id="@+id/ephoneno1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/elastname1"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/TextView02"
        android:digits="0123456789"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/lastname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ephoneno1"
        android:layout_alignParentLeft="true"
        android:text="Last Name"
        android:textColor="@color/White" 
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/efirstname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/elastname1"
        android:layout_below="@+id/cancel1"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/firstname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/efirstname1"
        android:layout_alignParentLeft="true"
        android:text="First Name"
        android:textColor="@color/White" 
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/elastname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/eemergencyphoneno1"
        android:layout_below="@+id/efirstname1"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/emergencyphoneno1"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/emergencyphoneno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneno1"
        android:layout_below="@+id/ephoneno1"
        android:layout_marginTop="56dp"
        android:text="Emergency No"
        android:textColor="@color/White" 
        android:textStyle="italic"/>

    <Button
        android:id="@+id/cancel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/efirstname1"
        android:layout_alignTop="@+id/submit1"
        android:layout_marginLeft="56dp"
        android:background="@color/LightGrey"
        android:text="Cancel"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/submit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/phoneno1"
        android:background="@color/LightGrey"
        android:text="Edit"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/phoneno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emergencyphoneno1"
        android:layout_alignRight="@+id/lastname1"
        android:text="Phone No"
        android:textColor="@color/White" 
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/eemergencyphoneno1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emergencyphoneno1"
        android:layout_alignBottom="@+id/emergencyphoneno1"
        android:layout_toRightOf="@+id/submit1"
        android:digits="0123456789"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/submit1"
        android:layout_alignTop="@+id/phoneno1"
        android:text="+1"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/emergencyphoneno1"
        android:layout_toLeftOf="@+id/eemergencyphoneno1"
        android:text="+1"
        android:textColor="@color/White"
        android:textSize="15sp" />

</RelativeLayout>