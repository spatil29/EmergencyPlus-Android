<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Greyish"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.finalproject.MainActivity" >

    <EditText
        android:id="@+id/ephoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/elastname"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/submit"
        android:digits="0123456789"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ephoneno"
        android:layout_alignParentLeft="true"
        android:text="Last Name"
        android:textColor="@color/White"
        android:textSize="15sp" 
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/efirstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/elastname"
        android:layout_below="@+id/cancel"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/efirstname"
        android:layout_alignParentLeft="true"
        android:text="First Name"
        android:textColor="@color/White"
        android:textSize="15sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/elastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/eemergencyphoneno"
        android:layout_below="@+id/efirstname"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/emergencyphoneno"
        android:ems="10"
        android:singleLine="true"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/emergencyphoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phoneno"
        android:layout_below="@+id/ephoneno"
        android:layout_marginTop="56dp"
        android:text="Emergency No"
        android:textColor="@color/White"
        android:textSize="15sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/efirstname"
        android:layout_alignTop="@+id/submit"
        android:layout_marginLeft="56dp"
        android:background="@color/LightGrey"
        android:text="Cancel"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/phoneno"
        android:background="@color/LightGrey"
        android:text="Save"
        android:textStyle="bold|italic" />

     <EditText
         android:id="@+id/eemergencyphoneno"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/emergencyphoneno"
         android:layout_alignBottom="@+id/emergencyphoneno"
         android:layout_alignLeft="@+id/ephoneno"
         android:digits="0123456789"
         android:ems="10"
         android:singleLine="true"
         android:textColor="@color/White" />

     <TextView
         android:id="@+id/TextView02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/eemergencyphoneno"
         android:layout_alignRight="@+id/submit"
         android:text="+1"
         android:textColor="@color/White"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/phoneno"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/emergencyphoneno"
         android:layout_alignLeft="@+id/lastname"
         android:text="Phone No"
         android:textColor="@color/White"
         android:textSize="15sp" 
         />

     <TextView
         android:id="@+id/TextView01"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/ephoneno"
         android:layout_alignLeft="@+id/TextView02"
         android:text="+1"
         android:textColor="@color/White"
         android:textSize="15sp" />



</RelativeLayout>